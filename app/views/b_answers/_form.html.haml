#b_answers_form.col-lg-12
  = form_for [@b_question, @b_answer] do |f|
    - if @b_answer.errors.any?
      #error_explanation
        %h2= "#{pluralize(@b_answer.errors.count, "error")} prohibited this b_answer from being saved:"
        %ul
          - @b_answer.errors.full_messages.each do |msg|
            %li= msg
    %h4 解答を作成します。正解のものにはチェックを入れてください。
    .row
      %table.col-lg-12
        %tr
          %td.col-lg-8
            .group
              .input-group
                %span.input-group-addon
                = f.text_field :answer, class: "form-control"
          %td.col-lg-4
            .actions
              = f.submit 'Save', class: "btn-primary"
